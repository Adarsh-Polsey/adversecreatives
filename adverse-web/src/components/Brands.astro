---
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"pages">["data"]["brands"];

const { title, highlight, list } = Astro.props as Props;
---

<section class="py-12 border-y border-white/5 bg-white/5">
  <div class="max-w-7xl mx-auto px-6 md:px-12 text-center">
    <h3 class="text-xl font-semibold mb-8">
      {title}
      <span class="text-blue-500">{highlight}</span>
    </h3>

    <div
      class="flex flex-wrap justify-center gap-8 md:gap-16 opacity-70 grayscale hover:grayscale-0 transition-all duration-500"
    >
      <!-- Simple Mock Logos -->
      {
        list.map((brand) => (
          <div class="flex items-center justify-center w-24 h-12 bg-white/10 rounded-lg">
            <span class="font-bold text-lg">{brand}</span>
          </div>
        ))
      }
    </div>
  </div>
</section>
